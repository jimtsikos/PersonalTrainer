@model ResultViewModel<Application.StudentWeights.Dtos.StudentWeightDto>

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StudentWeight</h4>
<hr />
@{ await Html.RenderPartialAsync("_StatusMessage", Model); }
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data.StudentId" class="control-label"></label>
                <select asp-for="Data.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Data.Weight" class="control-label"></label>
                <input asp-for="Data.Weight" class="form-control" />
                <span asp-validation-for="Data.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", new { studentId = ViewBag.StudentId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
