@model ResultViewModel<Application.Students.Dtos.StudentDto>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
@Html.RenderPartialAsync("_StatusMessage", Model)
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Data.Id" />
            <div class="form-group">
                <label asp-for="Data.FirstName" class="control-label"></label>
                <input asp-for="Data.FirstName" class="form-control" />
                <span asp-validation-for="Data.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.LastName" class="control-label"></label>
                <input asp-for="Data.LastName" class="form-control" />
                <span asp-validation-for="Data.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.Description" class="control-label"></label>
                <input asp-for="Data.Description" class="form-control" />
                <span asp-validation-for="Data.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.Height" class="control-label"></label>
                <input asp-for="Data.Height" class="form-control" />
                <span asp-validation-for="Data.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.PayRate" class="control-label"></label>
                <input asp-for="Data.PayRate" class="form-control" />
                <span asp-validation-for="Data.PayRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.PrepaidMoney" class="control-label"></label>
                <input asp-for="Data.PrepaidMoney" class="form-control" />
                <span asp-validation-for="Data.PrepaidMoney" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Data.IsActive" /> @Html.DisplayNameFor(model => model.Data.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
